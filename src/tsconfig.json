{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "outDir": "../dist"
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "./src/select-view.module#SelectViewModule",
    "skipMetadataEmit" : true,
    "genDir": "../dist"
  }
}
