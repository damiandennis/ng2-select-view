{
  "name": "ng2-select-view",
  "version": "0.0.15",
  "description": "Group of components to enhance the functionality of a select list. Influenced largely by the select2 project.",
  "main": "dist/select-view.module.js",
  "module": "dist/select-view.module.js",
  "jsnext:main": "dist/select-view.module.js",
  "types": "dist/select-view.module.d.ts",
  "scripts": {
    "transpile": "ngc -p src --clean",
    "copyTemplates": "copyfiles -u 1 src/**/*.html dist",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/ng2-select-view.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ng2-select-view.umd.min.js",
    "build": "npm run transpile && npm run copyTemplates && npm run package && npm run minify",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm run build"
  },
  "author": "Damian Dennis",
  "license": "ISC",
  "devDependencies": {
    "@angular/common": "~4.0.0",
    "@angular/core": "~4.0.0",
    "@angular/forms": "~4.0.0",
    "@angular/http": "~4.0.0",
    "@angular/platform-browser": "~4.0.0",
    "@angular/compiler": "~4.0.0",
    "@angular/compiler-cli": "~4.0.0",
    "rxjs": "^5.0.3",
    "zone.js": "^0.8.4",
    "core-js": "^2.4.1",
    "typescript": "^2.1",
    "@types/node": "^6.0.58",
    "rollup": "~0.41.6",
    "uglify-js": "^2.8.20",
    "copyfiles": "^1.2.0"
  }
}
